<article id="players">
  <h2>players</h2>
  {{ range .Players }}
  <section id="player-{{ .PlayerID }}" class="player">
    <div>{{ .Name }}</div>
    <div>{{ .Points.Value }}</div>
    <!-- TODO: handle cards -->
  </section>
  {{ end }}
  {{ if eq .Game.StateName "inviting" }}
  <section class="player">
    <p>Invite players with a <a href="/{{ .Game.ID }}/join">Share Link</a></p>
  </section>
  {{ end }}
</article>
